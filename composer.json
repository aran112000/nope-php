{
    "name": "aran112000/nope-php",
    "description": "A light-weight tool for parsing log files in real-time and blocking requests that match certain pattern you define",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Aran Reeks",
            "email": "cdtreeks@gmail.com"
        }
    ],
    "require": {
      "php": ">=5.6.0",
      "ext-redis": "*",
      "ext-curl": "*",
      "ext-json": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.25"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (!file_exists('settings.ini')) copy('settings.example.ini', 'settings.ini');\""
        ]
    }
}
